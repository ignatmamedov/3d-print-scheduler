@startuml

' Entry Point Class
class Main <<entry point>> {
}

' Core Manager Class
class PrinterManager {
}

' Abstract Printer Class and Subclasses
abstract class Printer {
}

class StandardFDM {
}

class HousedPrinter {
}

class MultiColor {
}

' Supporting Classes
class Print {
}

class Spool {
}

class PrintTask {
}

enum FilamentType {
  PLA
  PETG
  ABS
}

' Relationships
Main "1" o-- "1" PrinterManager : has
Main ..> Printer : uses
Main ..> FilamentType : uses
Main ..> Spool : uses
Main ..> PrintTask : uses

PrinterManager "1" *-- "1..*" Printer : owns
PrinterManager "1" o-- "0..*" Print : aggregates
PrinterManager "1" o-- "0..*" Spool : aggregates
PrinterManager "1" o-- "0..*" PrintTask : aggregates
PrinterManager ..> StandardFDM : uses
PrinterManager ..> HousedPrinter : uses
PrinterManager ..> MultiColor : uses

Printer ..> Spool : uses
Printer ..> Print : uses

StandardFDM --|> Printer
StandardFDM "1" o-- "1" Spool : owns
StandardFDM ..> Print : uses

HousedPrinter --|> StandardFDM
MultiColor --|> StandardFDM

PrintTask "1" o-- "1" Print : contains
PrintTask --> FilamentType : uses

Spool --> FilamentType : uses

@enduml
